{% extends "base.html.twig" %}

{% block title %}{{ actor.name }}{% endblock %}

{% block body %}
<h1>{{ actor.name }}</h1>

{% for program in actor.programs %}
    <div>
        <h2>{{ program.id }} / {{ program.title }}</h2>
        <p>{{ program.summary }}</p>
        <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
    </div>
{% else %}
    Aucune série trouvée.
{% endfor %}
{% endblock %}
