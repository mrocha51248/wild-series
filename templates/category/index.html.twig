{% extends 'base.html.twig' %}

{% block title %}{{ 'category.index.title'|trans }}{% endblock %}

{% block body %}
<h1>{{ 'category.index.heading'|trans }} :</h1>

<ul>
{% for category in categories %}
    <li>
        <a href="{{ path("category_show", { categoryName: category.name }) }}">{{ category.name }}</a>
    </li>
{% endfor %}
</ul>
{% endblock %}
