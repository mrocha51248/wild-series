{% extends "base.html.twig" %}

{% block title %}Saison {{ season.number }}{% endblock %}

{% block body %}
<div class="media">
    {% set programUrl = path("program_show", { id: program.id }) %}
    <h1 class="mt-0">Saison {{ season.number }} de <a href="{{ programUrl }}">{{ program.title }}</a></h1>
    <p>{{ season.description }}</p>
    <p>Episodes :</p>
    <div>
    {% for episode in season.episodes %}
        {%
            set episodeUrl = path("program_episode_show", {
                    programId: program.id,
                    seasonId: season.id,
                    episodeId: episode.id,
                })
        %}
        <div>
            <h2>{{ episode.number }} / <a href="{{ episodeUrl }}">{{ episode.title }}</a></h2>
            <p>{{ episode.synopsis }}</p>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
