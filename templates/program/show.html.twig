{% extends "base.html.twig" %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
<div class="media">
    <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
    <div class="media-body">
        <h1 class="mt-0">{{ program.title }}</h1>
        <p>{{ program.summary }}</p>
        <p>Cat√©gorie : {{ program.category.name }}</p>
        {% if program.seasons %}
            <p>Saisons :</p>
            <ul>
            {% for season in program.seasons %}
                {% set url = path("program_season_show", { programId: program.id, seasonId: season.id }) %}
                <li>{{ season.number }} / <a href="{{ url }}">{{ season.description }}</a> ({{ season.year }})</li>
            {% endfor %}
            </ul>
        {% endif %}
    </div>
</div>
{% endblock %}
